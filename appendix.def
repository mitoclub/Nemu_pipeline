Bootstrap: localimage
From: image_pipeline-2.8.sif

%post
    yum -y install epel-release
    yum -y install R

    cd /opt
    git clone https://github.com/kpotoh/pyvolve.git
    cd pyvolve
    python3 setup.py `install`

%test
    test_command () {
    if ! command -v "${1}"; then
        echo "!!!command ${1} not found!!!"
        export FAILED_TESTS=1
    fi
    }

    test_command R

%labels
    Maintainer MutSpec
    Version v2.6
